@{
}
@model DayOneAssignment.Models.Employee
<div class="container p-3 my-3 border">
    @*<h1> @ViewBag.PageName</h1>*@

    <div class="row">
        <div class="col-sm-6">
            <hr />

            <form class="form-control" asp-action="Edit" method="post">
                <input asp-for="EmployeeId"  class="form-control" />
                <div class="col-md-6">
                    <label class="form-label" asp-for="EmployeeFirstName">Employee First Name:</label>
                    <input asp-for="EmployeeFirstName" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label class="form-label" asp-for="EmployeeLastName">Employee Last Name:</label>
                    <input asp-for="EmployeeLastName" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label class="form-label" asp-for="BirthDate">BirthDate:</label>
                    <input asp-for="BirthDate" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Company" class="control-label"></label>
                    <select class="form-control" asp-for="CompanyId" asp-items="@ViewBag.Companies">
                    </select>
                   
                </div>

                <button class="" type="submit">Submit</button>
            </form>

        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}